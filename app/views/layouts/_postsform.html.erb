<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br/>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <br/>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br/>
  <%= f.label :categories %>
  <%= f.select :categories, Category.all.collect {|x| [x.name, x.id]}, {}, multiple: true %>
  <br/>
  <br/>
  <%= f.submit button_name %>
<% end %>